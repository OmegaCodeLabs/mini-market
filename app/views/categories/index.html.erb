<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Categories</h1>
    <% if current_user&.admin? %>
      <%= link_to "New Category", new_category_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    <% end %>
  </div>

  <% if @categories.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @categories.each do |category| %>
        <div class="border rounded-lg p-6 hover:shadow-lg transition">
          <h2 class="text-2xl font-semibold mb-2">
            <%= link_to category.name, category, class: "hover:text-blue-600" %>
          </h2>

          <% if category.description.present? %>
            <p class="text-gray-600 mb-4"><%= truncate(category.description, length: 100) %></p>
          <% end %>

          <p class="text-sm text-gray-500"><%= pluralize(category.items.count, "product") %></p>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600">No categories available.</p>
  <% end %>
</div>
