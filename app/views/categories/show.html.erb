<div class="container mx-auto px-4 py-8">
  <div class="mb-4">
    <%= link_to "â† Back to Categories", categories_path, class: "text-blue-600 hover:underline" %>
  </div>

  <div class="flex justify-between items-start mb-6">
    <div>
      <h1 class="text-4xl font-bold mb-2"><%= @category.name %></h1>
      <% if @category.description.present? %>
        <p class="text-gray-600"><%= @category.description %></p>
      <% end %>
    </div>

    <% if current_user&.admin? %>
      <div class="flex gap-2">
        <%= link_to "Edit", edit_category_path(@category), class: "bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600" %>
        <%= button_to "Delete", category_path(@category), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700" %>
      </div>
    <% end %>
  </div>

  <h2 class="text-2xl font-semibold mb-4">Products in this category</h2>

  <% if @items.any? %>
    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% @items.each do |item| %>
        <div class="border rounded-lg p-4 hover:shadow-lg transition">
          <h3 class="text-xl font-semibold mb-2"><%= link_to item.name, item, class: "hover:text-blue-600" %></h3>
          <p class="text-2xl font-bold text-green-600 mb-2">$<%= number_with_precision(item.price, precision: 2) %></p>

          <% if item.description.present? %>
            <p class="text-gray-600 mb-4 line-clamp-2"><%= truncate(item.description, length: 100) %></p>
          <% end %>

          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-500">Stock: <%= item.stock_quantity %></span>
            <%= link_to "View", item, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600">No products in this category yet.</p>
  <% end %>
</div>
