<%= form_with(model: category, class: "space-y-4") do |f| %>
  <% if category.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h2 class="font-bold"><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul class="list-disc list-inside">
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block font-semibold mb-2" %>
    <%= f.text_field :name, class: "w-full border rounded px-4 py-2" %>
  </div>

  <div>
    <%= f.label :description, class: "block font-semibold mb-2" %>
    <%= f.text_area :description, rows: 4, class: "w-full border rounded px-4 py-2" %>
  </div>

  <div class="flex gap-4">
    <%= f.submit class: "bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
    <%= link_to "Cancel", categories_path, class: "bg-gray-500 text-white px-6 py-2 rounded hover:bg-gray-600" %>
  </div>
<% end %>
