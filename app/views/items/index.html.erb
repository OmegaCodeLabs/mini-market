<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Products</h1>
    <% if current_user&.admin? %>
      <%= link_to "New Product", new_item_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    <% end %>
  </div>

  <% if @items.any? %>
    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% @items.each do |item| %>
        <div class="border rounded-lg p-4 hover:shadow-lg transition">
          <h2 class="text-xl font-semibold mb-2"><%= link_to item.name, item, class: "hover:text-blue-600" %></h2>

          <% if item.categories.any? %>
            <div class="mb-2">
              <% item.categories.each do |category| %>
                <span class="inline-block bg-gray-200 rounded px-2 py-1 text-sm"><%= category.name %></span>
              <% end %>
            </div>
          <% end %>

          <p class="text-2xl font-bold text-green-600 mb-2">$<%= number_with_precision(item.price, precision: 2) %></p>

          <% if item.description.present? %>
            <p class="text-gray-600 mb-4 line-clamp-2"><%= truncate(item.description, length: 100) %></p>
          <% end %>

          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-500">Stock: <%= item.stock_quantity %></span>
            <%= link_to "View Details", item, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600">No products available.</p>
  <% end %>
</div>
