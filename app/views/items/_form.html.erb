<%= form_with(model: item, class: "space-y-4") do |f| %>
  <% if item.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h2 class="font-bold"><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>
      <ul class="list-disc list-inside">
        <% item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block font-semibold mb-2" %>
    <%= f.text_field :name, class: "w-full border rounded px-4 py-2" %>
  </div>

  <div>
    <%= f.label :description, class: "block font-semibold mb-2" %>
    <%= f.text_area :description, rows: 4, class: "w-full border rounded px-4 py-2" %>
  </div>

  <div>
    <%= f.label :sku, "SKU", class: "block font-semibold mb-2" %>
    <%= f.text_field :sku, class: "w-full border rounded px-4 py-2" %>
  </div>

  <div>
    <%= f.label :price, class: "block font-semibold mb-2" %>
    <%= f.number_field :price, step: 0.01, min: 0, class: "w-full border rounded px-4 py-2" %>
  </div>

  <div>
    <%= f.label :stock_quantity, class: "block font-semibold mb-2" %>
    <%= f.number_field :stock_quantity, min: 0, class: "w-full border rounded px-4 py-2" %>
  </div>

  <div>
    <%= f.label :active, class: "flex items-center" %>
    <%= f.check_box :active, class: "mr-2" %>
    <span>Active (visible to customers)</span>
  </div>

  <div>
    <%= f.label :category_ids, "Categories", class: "block font-semibold mb-2" %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
      <div class="flex items-center mb-2">
        <%= b.check_box class: "mr-2" %>
        <%= b.label class: "text-gray-700" %>
      </div>
    <% end %>
  </div>

  <div class="flex gap-4">
    <%= f.submit class: "bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
    <%= link_to "Cancel", items_path, class: "bg-gray-500 text-white px-6 py-2 rounded hover:bg-gray-600" %>
  </div>
<% end %>
