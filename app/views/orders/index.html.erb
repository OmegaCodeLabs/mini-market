<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">
    <% if current_user&.admin? %>
      All Orders
    <% else %>
      My Orders
    <% end %>
  </h1>

  <% if @orders.any? %>
    <div class="space-y-4">
      <% @orders.each do |order| %>
        <div class="bg-white rounded-lg shadow-lg p-6">
          <div class="flex justify-between items-start mb-4">
            <div>
              <h2 class="text-xl font-semibold">
                <%= link_to "Order ##{order.uuid.first(8)}", order, class: "hover:text-blue-600" %>
              </h2>
              <p class="text-gray-600"><%= order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
              <% if current_user&.admin? && order.user %>
                <p class="text-sm text-gray-500">Customer: <%= order.user.email %></p>
              <% end %>
            </div>

            <div class="text-right">
              <span class="inline-block px-3 py-1 rounded text-sm font-semibold
                <%= case order.status
                    when 'pending' then 'bg-yellow-100 text-yellow-800'
                    when 'completed' then 'bg-green-100 text-green-800'
                    when 'shipped' then 'bg-blue-100 text-blue-800'
                    when 'cancelled' then 'bg-red-100 text-red-800'
                    end %>">
                <%= order.status.capitalize %>
              </span>
              <p class="text-2xl font-bold text-green-600 mt-2">$<%= number_with_precision(order.total, precision: 2) %></p>
            </div>
          </div>

          <div class="border-t pt-4">
            <p class="text-gray-600"><%= pluralize(order.order_items.count, "item") %></p>
            <%= link_to "View Details", order, class: "text-blue-600 hover:underline" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-lg p-6 text-center">
      <p class="text-xl text-gray-600 mb-4">No orders yet</p>
      <%= link_to "Start Shopping", items_path, class: "bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700 inline-block" %>
    </div>
  <% end %>
</div>
