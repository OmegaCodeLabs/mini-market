<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-4">
      <%= link_to "← Back to Orders", orders_path, class: "text-blue-600 hover:underline" %>
    </div>

    <div class="bg-white rounded-lg shadow-lg p-6">
      <div class="flex justify-between items-start mb-6">
        <div>
          <h1 class="text-3xl font-bold mb-2">Order #<%= @order.uuid.first(8) %></h1>
          <p class="text-gray-600"><%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          <% if current_user&.admin? && @order.user %>
            <p class="text-sm text-gray-500 mt-1">Customer: <%= @order.user.email %></p>
          <% end %>
        </div>

        <div class="text-right">
          <span class="inline-block px-4 py-2 rounded font-semibold
            <%= case @order.status
                when 'pending' then 'bg-yellow-100 text-yellow-800'
                when 'completed' then 'bg-green-100 text-green-800'
                when 'shipped' then 'bg-blue-100 text-blue-800'
                when 'cancelled' then 'bg-red-100 text-red-800'
                end %>">
            <%= @order.status.capitalize %>
          </span>
        </div>
      </div>

      <% if @order.shipping_name.present? %>
        <div class="mb-6 p-4 bg-gray-50 rounded">
          <h2 class="font-semibold mb-2">Shipping Information</h2>
          <p><%= @order.shipping_name %></p>
          <% if @order.shipping_address.present? %>
            <p><%= @order.shipping_address %></p>
            <p>
              <%= @order.shipping_city %><%= ", #{@order.shipping_state}" if @order.shipping_state.present? %> <%= @order.shipping_zip %>
            </p>
            <p><%= @order.shipping_country %></p>
          <% end %>
        </div>
      <% end %>

      <h2 class="text-xl font-semibold mb-4">Order Items</h2>
      <div class="space-y-4 mb-6">
        <% @order.order_items.each do |order_item| %>
          <div class="flex items-center justify-between border-b pb-4 last:border-b-0">
            <div class="flex-1">
              <h3 class="text-lg font-semibold">
                <%= link_to order_item.item_name, order_item.item, class: "hover:text-blue-600" %>
              </h3>
              <% if order_item.item_sku.present? %>
                <p class="text-sm text-gray-500">SKU: <%= order_item.item_sku %></p>
              <% end %>
              <p class="text-gray-600">$<%= number_with_precision(order_item.price, precision: 2) %> × <%= order_item.quantity %></p>
            </div>

            <p class="text-xl font-bold text-green-600">
              $<%= number_with_precision(order_item.subtotal, precision: 2) %>
            </p>
          </div>
        <% end %>
      </div>

      <div class="border-t pt-4">
        <div class="flex justify-between items-center text-2xl font-bold">
          <span>Total:</span>
          <span class="text-green-600">$<%= number_with_precision(@order.total, precision: 2) %></span>
        </div>
      </div>

      <% if @order.cancellable? && policy(@order).cancel? %>
        <div class="mt-6 pt-4 border-t">
          <%= button_to "Cancel Order", cancel_order_path(@order), method: :post, class: "bg-red-600 text-white px-6 py-2 rounded hover:bg-red-700", data: { turbo_confirm: "Are you sure you want to cancel this order?" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
